    body
        nav#nav
            .content
                a(href='/').navbar-brand
                    img(src='../../images/logo/logo-color.svg' alt='Logo Quorum')
                button.nav-toggle
                    i.fa.fa-bars
                div.bar
                    ul.nav
                        li
                            a(href='/#product')
                                span APPLICATIONS
                        li
                            a(href='../fr/news.html')
                                span NEWS
                        li
                            a(href='/#contact')
                                span FAQ
                        li
                            a(href='/#')
                                span BLOG
                
                    .banner
                        a(href="/#")
                            span#connexion CONNEXION
                        a(href="http://eepurl.com/bWGgCL" target="_blank")
                            button DEMO
                        a(href="#")
                            span
                              img(src="../images/icons/language.png")
        block content
        footer#footer
            .container
                .copyright
                    a(href='/').navbar-brand
                        img(src='../../images/about/avatar-rs-1.png' alt='Logo Quorum')
                ul.nav-footer
                    li
                        a.link(href='/about.html')
                            span About us
                    li
                        a(href='https://medium.com/@quorumblog' target="_blank") Blog
                    li
                        a.link(href='/legals.html')
                            span Legals
        section#newsletter
            .container
                div.banner
                    button.leave
                        i.fa.fa-close
                    img(src="../images/popup/newsletter.png")
                div
                    p Ne manquez rien du meilleur de nos publications, actualités et événements !
                    form(action="//quorum-impact.us12.list-manage.com/subscribe/post?u=8d7c7595072992d8808c7993d&amp;id=e5f9b9d368" method="post" enctype="multipart/form-data" data-dojo-attach-point="formNode" novalidate="")
                        div.input
                            input#mce-EMAIL(type="email" name="EMAIL" required placeholder="Email")
                            .border-input.blue
                            button.blue(type="submit") GO

        script(src='//code.jquery.com/jquery-2.1.4.min.js')
        script(src="https://d3js.org/d3.v3.min.js" charset="utf-8")
        script(src="../javascripts/c3.min.js")
        script(src="../javascripts/app.js")
