    body
        nav#nav
            .content
                a(href='/').navbar-brand
                    img(src='../../images/logo/logo-white.svg' alt='Logo Quorum')
                button.nav-toggle
                    i.fa.fa-bars
                div.bar
                    ul.nav
                        li 
                            a(href='/#product') 
                                span Product
                        li
                            a(href='/#contact') 
                                span Contact Us
                    .banner
                        img(src="../../images/icons/phone.svg")
                        span  +33 1 79 73 40 04
                        a(href="http://eepurl.com/bWJkZr" target="_blank")
                            button Get Early Access
                        span.flag
                            a(href="#")
                                img(src="../../images/icons/iconFR.png" alt="FR")
        block content        
        footer#footer
            .container
                .copyright
                    span &copy; Quorum 2016 
                ul.social-links
                    li
                        a(href='//facebook.com/quorumimpact' target="_blank")
                            i.fa.fa-facebook-square
                    li
                        a(href='//twitter.com/quorumimpact' target="_blank")
                            i.fa.fa-twitter-square
                    li
                        a(href='//linkedin.com/company/10114882' target="_blank")
                            i.fa.fa-linkedin-square
                    li
                        a(href='//google.com/+Quorumappsdata' target="_blank")
                            i.fa.fa-google-plus-square
                    li
                        a(href='//instagram.com/quorumteam/' target="_blank")
                            i.fa.fa-instagram
                ul.nav-footer
                    li
                        a.link(href='/about.html') 
                            span About Us
                    li
                        a(href='https://medium.com/@quorumblog' target="_blank") Blog
                    li
                        a.link(href='/legals.html') 
                            span Legal
        section#newsletter
            .container
                div.banner
                    button.leave
                        i.fa.fa-close
                    img(src="../images/popup/newsletter.png")
                div
                    p DON'T MISS THE BEST OF OUR ARTICLES, PUBLICATIONS AND EVENTS !
                    form(action="//quorum-impact.us12.list-manage.com/subscribe/post?u=8d7c7595072992d8808c7993d&amp;id=e5f9b9d368" method="post" enctype="multipart/form-data" data-dojo-attach-point="formNode" novalidate="")
                        div.input
                            input#mce-EMAIL(type="email" name="EMAIL" required placeholder="Email")
                            .border-input.blue
                            button.blue(type="submit") GO !
